extends ../base

block content
	h1 Edit a pet!
	form(action=`/owners/${pet.owner.id}/pets/${pet.id}?_method=PATCH`, method="POST")
		input(type="text", name="name", value=`${pet.name}`)
		input(type="submit", value="Edit a Pet!")
	form(action=`/owners/${pet.owner.id}/pets/${pet.id}?_method=DELETE`, method="POST")
		input(type="submit", value="Delete")