extends ../base

block content
	h1 Edit owner details!
	form(action=`/owners/${owner.id}?_method=PATCH`, method="POST")
		input(type="text", name="name", value=`${owner.name}`)
		input(type="submit", value="Edit a Pet!")
	form(action=`/owners/${owner.id}?_method=DELETE`, method="POST")
		input(type="submit", value="Delete")